doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  //- bootstrap
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  
  //- custom css
  link(rel='stylesheet' href='/css/font.css')
  link(rel='stylesheet' href='/css/login.css')

  //- title
  title Login

  //- body
  body

.wrapper
  .container.main
    .row
      .col-md-6.super-admin.side-image
        .text
          p Unlock the gateway to hospitality excellence.
      .col-md-6.right
        // Form
        .input-box
          header
            | Change Password
          .title
            | Enter your new password
          form#login-super-admin(action='/login/changepass' , method="POST")
            if errorMessageChangePass
              .error-box.text-center(style='background-color: pink; color: red; padding: 10px; margin-bottom: 10px; border-radius:5px;')
                p= errorMessageChangePass
            .input-field
              input#username.input(type='password' name='pass1' required='' autocomplete='off')
              label(for='pass1') Password
            .input-field
              input#username.input(type='password' name='pass2' required='' autocomplete='off')
              label(for='pass2') Confirm Password
            .input-field
              input.ha.submit(type='submit' value='Submit')



  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')