    title Promos

    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  
  body
    include ../../partials/navHSA.pug

    .content
        //- Header Title for page
        .row.mx-5
            .col-8.d-flex.align-items-center
                h2.text Promos
            .col-4.d-flex.align-items-center.justify-content-end
                a.btn.mod_btn(href='/pd/new') Add Promo

        each x in allPromosArray
            .containter.bg-white.shadow.p-0.mb-4.d-flex.justify-content-start
                .row(style="max-width: 300px")
                    if x.poster
                        img.img-fluid(src=`${x.poster}` alt='Poster')

                .row.px-4.py-3
                    if x.code
                        h6.hotel-location.mb-3
                            span #{x.code}
                    if x.name      
                        h6.hotel-number.mb-3
                            span #{x.name}
                    if x.description      
                        h6.hotel-email.mb-3
                            span #{x.description}
                    .d-flex.justify-content-between
                        if x.discount      
                            h6.hotel-email.mb-3
                                | Discount: <br>
                                span #{x.discount}
                        if x.startdate      
                            h6.hotel-email.mb-3
                                | Start Date: <br>
                                span #{x.startdate}
                        if x.enddate      
                            h6.hotel-email.mb-3
                                | End Date: <br>
                                span #{x.enddate}
                        //- if     
                        h6.hotel-email.mb-3
                            | Available On: <br>
                            //- span #{}
                        
                        a.sa-icon.sa-edit(href=`/pd/edit/${x.id}`)
                            i.fa-solid.fa-pen-to-square.fa-lg
                        
                        a.delete-icon()
                            i.fa-solid.fa-trash-can.fa-xl
