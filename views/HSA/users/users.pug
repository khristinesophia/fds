doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")  
    title Users
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' rel='stylesheet')
    //Table
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    link(rel='stylesheet' type='text/css' href='https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css')
    
    
    link(rel='stylesheet', href='/css/font.css')
    link(rel='stylesheet', href='/css/navigation.css')
    link(rel='stylesheet', href='/css/action_button.css')
    link(rel='stylesheet', href='/css/modal.css')
    
    

    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  body
    include ../../partials/navHSA.pug

    .content
      // Header Title for page
      .row.mx-5
        .col-8.d-flex.align-items-center
          h2.text Admin


        .container.shadow.mt-3.pt-3.pb-3.bg-white
          table#myTable.table.table-striped.table-hover(style='width:100%')
            thead
              tr
                th Username
                th Date Created
                th Actions

            tbody
              each ha in allHSAdminsArray
                tr
                  td #{ha.username}
                  td #{ha.datecreated}
                  td
                    button
                      a(href=`users/edit/FDM/${ha.userid}`) Edit

                    button
                      a(href=`users/changePW/FDM/${ha.userid}`) Change Password

        //- ---------- receptionist section ----------

        //Table  
        .row.mt-5
            .col-8.d-flex.align-items-center
              h2.text Receptionist
            .col-4.d-flex.align-items-center.mb-3.justify-content-end
              a.btn( onclick="openModal()" role='button') Add Receptionist
              include ../../mixins/modals.pug
              +addR
              
        .container.shadow.mt-3.pt-3.pb-3.bg-white
          table#myTable.table.table-striped.table-hover(style='width:100%')
            thead
              tr
                th Full Name
                th Username
                th Date Created
                th Actions
            tbody
              each r in allReceptionistsArray
                tr
                  td #{r.fullname}
                  td #{r.username}
                  td #{r.datecreated}
                  td
                    .d-flex.justify-content-start
                      //- Edit
                      a.sa-icon.sa-edit(data-userid=r.userid data-fullname=r.fullname data-username=r.username onclick="Edit_Receptionist_User(this)" role='button')
                        i.fa-solid.fa-pen-to-square.fa-lg  
                      include ../../mixins/modals.pug
                      +editReceptionistHSA(r.userid)
                      
                      //- Delete
                      a.delete-icon(data-userid=r.userid data-fullname=r.fullname onclick="Delete_Receptionist_User(this)" role='button')
                        i.fa-solid.fa-trash-can.fa-xl
                      include ../../mixins/modals.pug
                      +deleteReceptionistHSA(r.userid)

                      //-Change Password    
                      a.sa-icon.sa-pass(data-userid=r.userid data-password=r.hashpassword onclick="ChangePass_Receptionist_User(this)" role='button')
                        i.fa-solid.fa-key.fa-lg
                      include ../../mixins/modals.pug
                      +changeReceptionistHSA(r.userid)

    script(src='https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js')
    script(src='/js/table.js')
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/72e773f6c0.js' crossorigin='anonymous')
    script(src='/js/modal.js') 
    script(src='/js/nav-active.js') 
    script(src='/js/pass.js') 