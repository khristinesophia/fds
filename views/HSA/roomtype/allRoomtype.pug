    script(src='/js/nav-active.js') 
    script(src='/js/imgpreview.js') 
  
  body
    include ../../partials/navHSA.pug

    .content
      // Header Title for page
      .row.mx-5
        .col-8.d-flex.align-items-center
          h2.text Room Types
        .col-4.d-flex.align-items-center.justify-content-end
          a.btn( onclick="openModal()" role='button') Add Room Type
          include ../../mixins/modals.pug
          +addRoomType

        each r in allRoomtypeArray
          
            //- card
            .col-12.col-md-12.col-lg-3.mt-4
              .card.bg-white.line-height.shadow.h-100
                .card-body.text-dark
                  .img-area.mb-4
                    if r.roomimage
                      img.img-fluid.hotel-img(src=`${r.roomimage}` alt='Room Image')
                  //- h4.hotel-name.mb-4
                  //-   span #{h.hotelname}
                  if r.roomtype
                    h6.hotel-location.mb-3
                        | Room Type: 
                        span #{r.roomtype}
                  if r.description      
                    h6.hotel-number.mb-3
                        | Description: 
                        span #{r.description}
                  if r.capacity      
                    h6.hotel-email.mb-3
                        | Capacity: 
                        span #{r.capacity}
                  if r.price      
                    h6.hotel-email.mb-3
                        | Price: 
                        span #{r.price}
                .card-footer.pb-3.pt-3
                  .d-flex.justify-content-end
                    
                    //button
                      a(href=`/roomtype/edit/${r.typeid}`) Edit
                    //- Edit
                    a.sa-icon.sa-edit(data-typeid=r.typeid data-roomtype=r.roomtype
                     data-roomdescription=r.description data-roomprice=r.price 
                     data-roomcapacity=r.capacity data-roomimage=r.roomimage
                     onclick="Edit_RoomType(this)" role='button')
                      i.fa-solid.fa-pen-to-square.fa-lg  
                    include ../../mixins/modals.pug
                    +editRoomType(r.typeid)  
                    //-Delete
                    a.delete-icon(data-typeid=r.typeid data-roomtype=r.roomtype  onclick="openDeleteRoomType(this)" role='button')
                      i.fa-solid.fa-trash-can.fa-xl
                    include ../../mixins/modals.pug
                    +deleteRoomType(r.typeid)
                      
                  //- card end

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/72e773f6c0.js' crossorigin='anonymous')
