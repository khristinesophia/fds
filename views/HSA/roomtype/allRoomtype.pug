    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  //- body
    include ../../partials/navHSA.pug

    .content
      // Header Title for page
      .row.mx-5
        .col-8.d-flex.align-items-center
       
        .container.shadow.mt-3.pt-3.pb-3.bg-white
          .row
            .col-8.d-flex.align-items-center
              h2.text Room Types
            .col-4.d-flex.align-items-center.mb-3.justify-content-end
              a.btn( onclick="openModal()" role='button') Add Room Type
              include ../../mixins/modals.pug
              +addRoomType
          table#myTable.table.table-striped.table-hover(style='width:100%')
            thead
              tr
                th Room Type
                th Description
                th Price
                th Capacity 
                th Room Image
                th Action

            tbody
              each r in allRoomtypeArray
                tr
                  td #{r.roomtype}
                  td #{r.description}
                  td #{r.price}
                  td #{r.capacity}
                  td
                    if r.roomimage
                      img(src=r.roomimage, style="width: 200px; height: 100px;")
                    else
                      p No image available
                  td
                    button
                      a(href=`/roomtype/edit/${r.typeid}`) Edit


                    a.delete-icon(data-typeid=r.typeid data-roomtype=r.roomtype  onclick="openDeleteRoomType(this)" role='button')
                      i.fa-solid.fa-trash-can.fa-xl
                    include ../../mixins/modals.pug
                    +deleteRoomType(r.typeid)  

                    //form(action=`/roomtype/delete/${r.typeid}`, method="POST")
                      input(type="hidden", name="_method", value="DELETE")
                      button(type="submit") Delete

    //Table
    script(src='https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js')
