doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/modal.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    title Room Type

    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  body
    include ../../partials/navHSA.pug

    .content
      // Header Title for page
      .row
        .col-8.d-flex.align-items-center

        h2 Navs
        nav
        ul
            li
                a(href="/roomtype") All Room Type
            li
                a(href="/roomtype/addRoomtype") Add Room Type

        //- ---------- table section ----------
        hr

        h2 All Room Type

        table
          thead
            tr
              th Room Type
              th Description
              th Price
              th Capacity 
              th Room Image
              th Action

          tbody
            each r in allRoomtypeArray
              tr
                td #{r.roomtype}
                td #{r.description}
                td #{r.price}
                td #{r.capacity}
                td
                  if r.roomimage
                    img(src=r.roomimage, style="width: 200px; height: 100px;")
                  else
                    p No image available
                td
                  button
                    a(href=`/roomtype/edit/${r.typeid}`) Edit

                  form(action=`/roomtype/delete/${r.typeid}`, method="POST")
                    input(type="hidden", name="_method", value="DELETE")
                    button(type="submit") Delete

    