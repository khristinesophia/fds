doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    //- bootstrap css and js
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    
    //- custom css
    link(rel='stylesheet', href='/css/font.css')
    link(rel='stylesheet', href='/css/navigation.css')
    link(rel='stylesheet', href='/css/modal.css')
    link(rel='stylesheet', href='/css/card.css')

    //- color.pug

 
    title Profile

    include ../../partials/color.pug
  body
    include ../../partials/navHSA.pug
    //- .content
      .container-fluid
        .row.justify-content-center.align-items-center.h-100
          .col-md-10
            .card.profile
              .card-body
                .row
                  .col-md-6
                    if h.hotelimage
                      img.logo-img(src=`${h.hotelimage}`, height="300", alt="")
                  .col-md-6
                    if hotelColor
                      h3.card-title Color Theme:
                      p.card-text
                        span #{hotelColor.color}
                    hr
                    if h.hotellocation
                      h6 Location:
                      p.card-text
                        span #{h.hotellocation}
                    if h.hotelcontact
                      h6 Contact Number:
                      p.card-text
                        span #{h.hotelcontact}
                    if h.hotelemail
                      h6 Email:
                      p.card-text
                        span #{h.hotelemail}

                    button.btn.btn-primary
                      a(href="/profile/editprofile") Edit

    .content
      .row.mx-5.d-flex.justify-content-center
        .col-12.col-md-12.col-lg-5.mt-4
          .card.bg-white.shadow.text-center
            .card-body.text-dark
              .img-area.mb-4
              if h.hotelimage
                img.logo-img(src=`${h.hotelimage}`, height="300", alt="", style="border-radius: 50%; border: 1px solid black")
              if hotelColor
                h6 Color Theme: 
                  span #{hotelColor.color}
              hr
              if h.hotellocation
                h6 Location: 
                  span #{h.hotellocation}
              if h.hotelcontact
                h6 Contact Number: 
                  span #{h.hotelcontact}
              if h.hotelemail
                h6 Email: 
                  span #{h.hotelemail}

              a.btn(href="/profile/editprofile") Edit

            //thres an error here 
              a.btn(data-hotelid=h.hotelid data-hotelcolor=hotelColor data-hname=h.hotelname data-hlocation=h.hotellocation 
              data-hcontact=h.hotelcontact data-hemail=h.hotelemail onclick="Edit_Profile(this)" role='button') Edit
              include ../../mixins/modals.pug
              +editProfileHSA(h.hotelid, colorStacksArray)


              
    //- bootstrap js
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    
    //- fontawesome
    script(src='https://kit.fontawesome.com/72e773f6c0.js' crossorigin='anonymous')

    //- custom js
    script(src='/js/modal.js') 
    script(src='/js/nav-active.js')  