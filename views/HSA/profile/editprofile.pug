doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    //- bootstrap css and js
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    
    //- custom css
    link(rel='stylesheet', href='/css/font.css')
    link(rel='stylesheet', href='/css/navigation.css')
    link(rel='stylesheet', href='/css/modal.css')
    link(rel='stylesheet', href='/css/card.css')
    
    //- color.pug
    include ../../partials/color.pug

    title Edit Profile
  body

    include ../../partials/navHSA.pug



    .content
      .row.mx-5.d-flex.justify-content-center
        // Header Title for page
        .col-12.col-md-12.col-lg-5.mt-4
          .card.bg-white.shadow
            .card-body.text-dark
              h2.text.text-center.mb-3 Edit Profile

              form(action=`/profile/edit/${h.hotelid}`, method="POST")

                label.col-form-label(for='hotelcolor') Color Theme
                select.form-select(id='hotelcolor', name='hotelcolor')
                  option(value=h.hotelcolor, disabled, selected)=h.hotelcolor
                  each c in colorStacksArray
                    option(value=c.color)= c.color
                hr  
                
                label.col-form-label(for="hotelname") Hotel Name:
                input.form-control(type="text", id="hotelname", name="hotelname", value=`${h.hotelname ? h.hotelname : ''}`, required)

                label.col-form-label(for="hotellocation") Hotel Location:
                input.form-control(type="text", id="hotellocation", name="hotellocation", value=`${h.hotellocation ? h.hotellocation : ''}` required)

                label.col-form-label(for="hotelcontact") Hotel Contact:
                input.form-control(type="text", id="hotelcontact", name="hotelcontact", value=`${h.hotelcontact ? h.hotelcontact : ''}` required)

                label.col-form-label(for="hotelemail") Hotel Email:
                input.form-control(type="email", id="hotelemail", name="hotelemail", value=`${h.hotelemail ? h.hotelemail : ''}` required)

                input.btn.mt-3(type="submit", value="Submit")


    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/72e773f6c0.js' crossorigin='anonymous')
    script(src='/js/modal.js') 
    script(src='/js/nav-active.js')  
