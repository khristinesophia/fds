doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit #{sa.fullname}
  body
    h1 Edit #{sa.fullname}

    form(action=`/superadmins/edit/${sa.superadminid}`, method="POST")
      label(for="name") Name:
      input(type="text", id="name", name="name", value=`${sa.fullname}`, required)
      br
      br

      label(for="username") Username:
      input(type="text", id="username", name="username", value=`${sa.username}`, required)
      br
      br

      input(type="submit", value="Submit")