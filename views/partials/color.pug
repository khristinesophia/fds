style.
    .bg{
        background-color: #{hotelColor.secondary}
    }
    body{
        background-color: #{hotelColor.background}
    }
    .rr{
        padding-right:100px;
            }

    #navbar-wrapper {    
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: #fff; 
    z-index: 1000; /* Ensure it's above other elements */
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2); /* Add a shadow */
    }

    .sidebar {
    background-color: #{hotelColor.main};
    padding-top: 20px;
    padding-left: 20px;
    padding-right: 20px;
    height: 100%;
    width: 250px;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    }

    .sidebar-logo {
    text-align: center;
    margin-bottom: 20px;
    }

    .sidebar-logo img {
    width: 100px; /* Adjust the logo's width as needed */
    height: auto;
    }

    .nav-item {
    color: #fff;
    display: flex;
    align-items: center;
    margin: 8px 0;
    }

    .nav-item i {
    margin-right: 20px;
    }

    .nav-item:hover {
    border-radius: 5px;
    color: #{hotelColor.accent};
    }

    .nav-item span {
    font-size: 12px;
    }

    .nav-item a {
    color: #fff; /* Set the default text color to white */
    text-decoration: none; /* Remove underlines from links */
    }

    .nav-item:hover a {
    color: #{hotelColor.accent};
    }
    
    .nav.flex-column .nav-link {
    padding-left: 5px;
    }

    .fas {
    margin-left: 10px;
    width: 21px;
    }

    .separator {
    background-color: #fff ;
    height: 2px;
    margin: 15px 0;
    }

    .sign-out-sticky {
    position: absolute;
    bottom: 0;
    }

    .sidebar .nav-link {
    text-decoration: none;
    border-color: transparent;
    color: white;
    background: none;
    width: 210px;
    text-align: left;
    }

    .sidebar .nav-link:hover {
    color: #{hotelColor.accent};
    }

    .upper {
    margin-left: 250px;
    height: 80px;
    }

    .content {
    margin-left: 250px;
    margin-top: 80px;
    padding: 20px;
    }

    .nav-item.active {
    background-color: #fff;
    color: #{hotelColor.accent};
    font-weight: 600;
    border-radius: 5px;
    }

    .active .nav-link {
    color: #{hotelColor.accent};
    }


    .nav-roomlink {
    text-decoration: none;
    border-color: transparent;
    background: none;
    width: 210px;
    text-align: left;
    color: #{hotelColor.accent};
    }
    .nav-roomlink:hover{
    background-color: #{hotelColor.accent};
    color: #fff;
    border-radius: 5px;
    padding: .5rem;
    }

    .nav_room.active {
    background-color: #{hotelColor.accent};
    font-weight: 600;
    border-radius: 5px;
    }
    .active .nav-roomlink {
    color: #fff;
    }
    .profile{
    background-color: #{hotelColor.secondary};    
    }

    .mod_btn{
        background-color: #{hotelColor.main};
        border-color: transparent;
    }
    .mod_btn:hover{
        background-color: #{hotelColor.accent};
        border-color: transparent;
    }
    .mod_btn_sec{
        background-color: white;
        color: #333;
        border-radius:5px;
        border-color:#{hotelColor.main};
    }
    .mod_btn_sec:hover{
        background-color:#{hotelColor.secondary}; 
        border-color:#{hotelColor.secondary};
    }
    .table {
        --bs-table-striped-bg: #{hotelColor.background};
        /*--bs-table-active-bg: #{hotelColor.background};
        --bs-table-hover-bg: #{hotelColor.background};*/
    }
    .room_box h5{
        border-radius:10px;
    }

    

    
    .accordion-collapse {
        display: none; /* Hide the accordion content initially */
    }
    
    .accordion-collapse.show {
        display: block; /* Show the accordion content when toggled */
    }
    
    /* Style for the nested links to make them appear indented and below the accordion header */
    .nav.flex-column .nav-item {
        display: block; /* Override any flex styling that might be affecting the layout */
    }
    .accordion-toggle.accordion-active {
        color: #{hotelColor.accent};
    }
    .pull-right {
        margin-left: auto;
    }
    .fa-caret-down {
        position: absolute;
        right: 0;
        transform: translateY(30%);
    }
