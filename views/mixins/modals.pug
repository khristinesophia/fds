mixin addhotel 
    #modal.modal  
            .modal-content
                .modal-header
                    h5.modal-title(id='') Add Hotel
                    button.btn-close(type='button' onclick='closeModal()' aria-label='Close')
                .modal-body.mb-3 
                    form(action="/hotels", method="POST")
                    
                        label.col-form-label(for="hotelname") Hotel Name:
                        input.form-control(type="text", id="hotelname", name="hotelname", required)
                        //- ganto talaga indentation ng .modal-footer
                        .modal-footer
                            button.btn.btn-secondary(type="button", onclick="closeModal()") Cancel
                            button.btn(data-bs-target='#modal2' data-bs-toggle='modal') Submit                     

    
                            

mixin addHA 
    #modal.modal
        .modal-content
            .modal-header
                h1 Add Super Admin
            .modal-body
                form(action="/hoteladmins", method="POST")

                    label(for="username") Username:
                    input(type="text", id="username", name="username", required)
                    br
                    br

                    label(for="password") Password:
                    input(type="password", id="password", name="password", required)
                    br
                    br

                    select(id='hotelid', name='hotelid')
                        each h in allHotelsArray
                            option(value=h.hotelid)= h.hotelname

                    br
                    br
                    //- ganto talaga indentation ng .modal-footer
                    .modal-footer
                        button.closeModalBtn(type="button", onclick="closeModal()") Cancel
                        input(type="submit", value="Submit")

