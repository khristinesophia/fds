doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        //- bootstrap
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')

        //- jquery
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js' integrity='sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==' crossorigin='anonymous' referrerpolicy='no-referrer')

        //- custom css
        link(rel='stylesheet', href='/css/font.css')
        link(rel='stylesheet', href='/css/modal.css')
        link(rel='stylesheet', href='/css/table.css')

        //- title
        title Folio

        //- sa head lagi nakalagay ang color.pug
        include ../../partials/color.pug
    //-body
    body
        //- sidenav
        include ../../partials/navR.pug

        //- main content
        .content
            //- page title
            .row.mx-5
                .col-8.d-flex.align-items-center
                    h2.text #{ga.fullname} - Room #{ga.roomnum}
                .col-4.d-flex.align-items-center.justify-content-end
                    a.btn.mod_btn(href="/ga/new") Register a Guest Account

                //- modulenav
                include ../../partials/navRga.pug
            
                .container.shadow.mt-3.p-0.bg-white
                    .px-5.py-3.mb-3.bg
                        h4.m-0 Folio
                    .px-5.py-3
                        table.table.table-borderless(style='width:100%')
                            thead
                                tr
                                    th Code
                                    th Paid
                                    th Description
                                    th Price
                                    th Quantity
                                    th Amount
                            tbody
                                each t in t1
                                    tr
                                        td #{t.transactionid}
                                        if t.paid
                                            td Paid
                                        if t.paid === false 
                                            td Not paid
                                        td #{t.description}
                                        td #{t.price}
                                        td #{t.qty}
                                        td.amount #{t.amount}
                                each t in t2
                                    tr
                                        td #{t.ps_code}
                                        if t.paid
                                            td Paid
                                        if t.paid === false 
                                            td Not paid
                                        td #{t.ancillary_desc}
                                        td #{t.price}
                                        td #{t.quantity}
                                        td.amount #{t.amount}
                                each t in t3
                                    tr
                                        td #{t.transactionid}
                                        if t.paid
                                            td Paid
                                        if t.paid === false 
                                            td Not paid
                                        td #{t.description}
                                        td #{t.price}
                                        td #{t.qty}
                                        td.amount #{t.amount}
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td Subtotal
                                    td#subtotal
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td Discount
                                    td#discount #{ga.discount}%
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td Tax
                                    td#tax #{ga.tax}%
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td.fw-bold Total Amount
                                    td#totalamount 
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td.fw-bold Paid to Date
                                    td#paidtodate
                                tr
                                    td 
                                    td 
                                    td 
                                    td
                                    td.fw-bold Balance
                                    td#balance 
                        p.mt-5.text-center Discounts and taxes are already applied on the room accommodation.
                    
                    script.
                        const t1 = !{JSON.stringify(t1)}
                        const t2 = !{JSON.stringify(t2)}
                        const t3 = !{JSON.stringify(t3)}
                        const amounts = document.querySelectorAll('td.amount')
                        const subtotalTD = document.querySelector('#subtotal')
                        const totalamountTD = document.querySelector('#totalamount')
                        const paidtodateTD = document.querySelector('#paidtodate')
                        const balanceTD = document.querySelector('#balance')

                        function calculatePercentageOfAmount(amount, percent) {
                            return (percent / 100) * amount;
                        }

                        document.addEventListener('DOMContentLoaded', ()=>{
                            let subtotal = 0
                            let totalamount = 0
                            let paidtodate = 0

                            t1.forEach(t => {
                                subtotal += parseInt(t.amount)
                                totalamount += parseInt(t.amount)
                                if(t.paid === true){
                                    paidtodate += parseInt(t.amount)
                                }
                            })
                            t2.forEach(t => {
                                subtotal += parseInt(t.amount)
                                totalamount += parseInt(t.amount)
                                if(t.paid === true){
                                    paidtodate += parseInt(t.amount)
                                }
                            })
                            t3.forEach(t => {
                                subtotal += parseInt(t.amount)
                                totalamount += parseInt(t.amount)
                                if(t.paid === true){
                                    paidtodate += parseInt(t.amount)
                                }
                            })

                            subtotalTD.innerText = subtotal
                            totalamountTD.innerText = totalamount
                            paidtodateTD.innerText = paidtodate
                            balanceTD.innerText = totalamount - paidtodate
                        })

                if ga.status === "Inspected" && ga.settled === false
                    .container.shadow.mt-3.p-0.bg-white
                        .px-5.py-3.mb-3.bg
                            h4.m-0 Payment
                        .px-5.py-3
                            .d-flex.justify-content-center 
                                .row
                                    a(onclick="openModal()" role='button') 
                                        i.fa-solid.fa-credit-card
                                        p Credit Card
                                .row
                                    a(onclick="openModal()" role='button') 
                                        i.fa-regular.fa-credit-card
                                        p Debit Card
                                .row 
                                    form(action=`/ga/cashpayment/${ga.accountid}` method="POST") 
                                        i.fa-solid.fa-money-bills
                                        
                                        input(type="hidden" id="subtotal3" name="subtotal3")
                                        input(type="hidden" id="totalamount3" name="totalamount3")
                                        input(type="hidden" id="paidtodate3" name="paidtodate3")
                                        input(type="hidden" id="balance3" name="balance3")
                                        
                                        script.
                                            document.addEventListener('DOMContentLoaded', ()=>{
                                                
                                                const subtotal = parseInt(document.querySelector('#subtotal').innerText)
                                                document.querySelector('#subtotal3').value = subtotal

                                                const totalamount = parseInt(document.querySelector('#totalamount').innerText)
                                                document.querySelector('#totalamount3').value = totalamount

                                                const paidtodate = parseInt(document.querySelector('#paidtodate').innerText)
                                                document.querySelector('#paidtodate3').value = paidtodate

                                                const balance = parseInt(document.querySelector('#balance').innerText)
                                                document.querySelector('#balance3').value = balance
                                            })

                                        input(type="submit" value="Cash")
                                include ../../mixins/modals.pug
                                +approvalcode
                
                if ga.settled === true
                    .container.shadow.mt-3.p-0.bg-white
                        .px-5.py-3.mb-3.bg
                            h4.m-0 Invoice
                        .px-5.py-3
                            .d-flex.justify-content-center 
                                .row
                                    form(action=`/ga/invoice/${ga.accountid}` method="GET") 
                                        input(type="submit" value="Download")


