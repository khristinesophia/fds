doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/modal.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    
    title Super Admins
  body
    include ../../partials/navSA.pug

    hr
    button#addSAModalBtn(type='button') Add Super Admin
    include ../../mixins/modals.pug
    +addSA
    
    hr
    h1 Super Admins
    each sa in allSuperAdminsArray
      hr
      h2 #{sa.fullname}
      p Username: 
        span #{sa.username}

      button#editSAModalBtn Edit
      include ../../mixins/modals.pug
      +editSA(sa)

      form(action=`superadmins/delete/${sa.superadminid}`, method="POST")
        input(type="hidden", name="_method", value="DELETE")
        button(type="submit") Delete

      button#changeSAPWModalBtn Change Password
      include ../../mixins/modals.pug
      +changeSAPW(sa)

    include ../../partials/logoutSA.pug

    script(src='/js/modalSA.js') 