doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/modal.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    title Edit Profile
    
    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  body
    include ../../partials/navHA.pug

    form(action=`/profile`, method="POST")
      label.form-label(for='hotelcolor') Pick your establishmentâ€™s color
      br
      select(id='hotelcolor', name='hotelcolor')
        option(value=h.hotelcolor)= h.hotelcolor
        each c in colorStacksArray
          option(value=c.color)= c.color
      hr  
      
      label(for="hotelname") Hotel Name:
      input(type="text", id="hotelname", name="hotelname", value=`${h.hotelname ? h.hotelname : ''}`, required)
      br
      br

      label(for="hotellocation") Hotel Location:
      input(type="text", id="hotellocation", name="hotellocation", value=`${h.hotellocation ? h.hotellocation : ''}` required)
      br
      br

      label(for="hotelcontact") Hotel Contact:
      input(type="text", id="hotelcontact", name="hotelcontact", value=`${h.hotelcontact ? h.hotelcontact : ''}` required)
      br
      br

      label(for="hotelemail") Hotel Email:
      input(type="email", id="hotelemail", name="hotelemail", value=`${h.hotelemail ? h.hotelemail : ''}` required)
      br
      br

      input(type="submit", value="Submit")

    include ../../partials/logoutHA.pug

    script(src='/js/modal.js') 