doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    
    //Table
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    link(rel='stylesheet' type='text/css' href='https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css')

    link(rel='stylesheet', href='/css/modal.css')
    link(rel='stylesheet', href='/css/font.css')
    link(rel='stylesheet', href='/css/navigation.css')
    link(rel='stylesheet', href='/css/table.css')

    title Rooms
    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  body
    include ../../partials/navHA.pug

    .content
      // Header Title for page
      .row
        .col-8.d-flex.align-items-center
          h2.text Rooms
          
        h2 Nav
        .container.mt-3
          .d-flex.justify-content-between.align-items-stretch.pt-2.text-white
            ul#menu.nav.nav-pills.justify-content-between.flex-shrink-0.mb-sm-auto.mb-0.align-items-center.align-items-sm-stretch
              // all rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text.room_active(href='/HArooms')
                  i.fa-solid.fa-bed.me-sm-1.ms-2
                  span All Rooms
              // vacant rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text(href='/HArooms/vacantRooms')
                  i.fa-solid.fa-tags.me-sm-1.ms-2
                  span Vacant Rooms
              // vacant rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text(href='/HArooms/reservedRooms')
                  i.fa-solid.fa-tags.me-sm-1.ms-2
                  span Reserved Rooms    
              // occupied rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text(href='/HArooms/occupiedRooms')
                  i.fa-solid.fa-house-lock.me-sm-1.ms-2
                  span Occupied Rooms
              // on-change rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text(href='/HArooms/onchangeRooms')
                  i.fa-solid.fa-broom.me-sm-1.ms-2
                  span On-Change Rooms
              // out-of-order rooms
              li.nav-item.line
                a.nav-link.align-middle.nav_text(href='/HArooms/outoforderRooms')
                  i.fa-solid.fa-circle-minus.me-sm-1.ms-2
                  span Out-of-Order Rooms
              // add a rooms
              li.nav-item.ps-2
                a.nav-link.align-middle.nav_text(href='/HArooms/addRooms')
                  i.fa-solid.fa-house-medical.me-sm-1.ms-2
                  span Add a Room


        //- ---------- table section ----------
        hr

        .container.shadow.mt-3.pt-3.pb-3.bg-white
          h2 All Rooms 
          table#myTable.table.table-striped.table-hover(style='width:100%')
            thead
              tr
                th Room Number
                th Room Type
                th Room Floor
                th Room Status
                th Action

            tbody
              each r in allRoomsArray
                tr
                  td #{r.roomnum}
                  td #{r.roomtype}
                  td #{r.roomfloor}
                  td #{r.status}
                  td
                    form(action=`HArooms/delete/${r.roomnum}`, method="POST")
                      input(type="hidden", name="_method", value="DELETE")
                      button(type="submit") Delete
    
    //Table
    script(src='https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js')
    script(src='/js/table.js')
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/72e773f6c0.js' crossorigin='anonymous')
    script(src='/js/modal.js') 
    script(src='/js/nav-active.js') 
