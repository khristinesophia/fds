doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/modal.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    title Room Type

    //- sa head lagi nakalagay ang color.pug
    include ../../partials/color.pug
  body
    include ../../partials/navHA.pug

    h2 Navs
    nav
    ul
        li
            a(href="/roomtype") All Room Type
        li
            a(href="/roomtype/addRoomtype") Add Room Type

    h2 Add Room Type

    //- Add Room Type Form 
    form(method="POST" action="/roomtype/addRoomtype" enctype="multipart/form-data")
        .form-group
            label(for="roomtype") Room Type:
            input.form-control(type="text", name="roomtype", title="Please enter a room type", required)

        .form-group
            label(for="description") Description:
            textarea.form-control(name="description", rows = "4", title="Please enter a description", required)
            
        .form-group
            label(for="price") Price:
            input.form-control(type="number", name="price", min="0", required)

        .form-group
            label(for="capacity") Capacity:
            input.form-control(type="number", name="capacity", min="0", required)

        .form-group
            label(for="roomimage") Room Image:
            input.form-control(type="file", name="roomimage", accept="image/*", onchange="previewImage(event)", required)
            img#imagePreview(style="width: 300px; height: 200px;")

        input(type="submit" class="btn btn-primary" value="Submit")
        a.btn.btn-secondary(href="/roomtype") Back

    //- JavaScript code for image preview
    script.
      function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function() {
          const output = document.getElementById('imagePreview');
          output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
      }


